@model BlogCore.Models.SliderModel;
@{
    ViewData["Title"] = "Crear Slider";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h3 class="text-primary">Crear Slider</h3>
            </div>
            <form method="POST" class="card-body" asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SliderName" class="control-label"></label>
                    <input asp-for="SliderName" class="form-control" />
                    <span asp-validation-for="SliderName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SliderStatus" class="control-label"></label>
                    <input asp-for="SliderStatus" class="form-control"></input>
                    <span asp-validation-for="SliderStatus" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SliderImageUrl" class="control-label"></label>
                    <input type="file" name="Files" id="uploadFiles" asp-for="SliderImageUrl" class="form-control" />
                    <span asp-validation-for="SliderImageUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-block">Crear</button>
                </div>
            </form>
            <div class="card-footer">
                <a class="text-primary" asp-action="Index">Volver a la lista</a>
            </div>
        </div>
    </div>
</div>

@section scripts{
}

